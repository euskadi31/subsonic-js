{
    "compilerOptions": {
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "dist/",
        "sourceMap": true,
        "removeComments": true,
        "noUnusedLocals": true,
        "declaration": true,
        "declarationDir": "./dist",
        "target": "es5",
        "lib": [
            "dom",
            "es2015",
            "es2017",
            "es5",
            "es6",
            "scripthost"
        ],
        "typeRoots": [
            "./node_modules/@types/"
        ],
        "types": []
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
